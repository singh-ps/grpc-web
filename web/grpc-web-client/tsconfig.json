{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node16",
  },
  "include": ["src"]
}